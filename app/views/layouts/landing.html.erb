<!DOCTYPE html>
<html>
<head>
	<%= render "/layouts/head" %>
	<%= render "/layouts/relations" %>
</head>
<body>
	<div id="header">
		<div id="header_content">
			<ul class="strengthify-header-list left_align">
				<li class="strengthify-logo"> </li>
				<li class="strengthify-header"> <%= name %> </li> 
			</ul>

			<nav class="header-nav">
				<ul class="header-nav-list__unregistered">
					<li> <%= link_to 'Sign Up', signup_path, class: "btn btn-new" %> </li>
					<li> <%= link_to 'Log In', login_path, class: "btn btn-success" %> </li>
				</ul>
			</nav>
			<div style="clear: both;"></div>
		</div>
	</div>

<div id="application_wrapper">	
	<div id="content_wrapper">
		<%= yield %>
	</div>
</div>
</body>
</html>