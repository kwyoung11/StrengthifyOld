<script>
// First make it link to the homepage
var link = d3.select("#lift_logo").append("svg:a").attr("xlink:href", "/");

var svg = d3.select("#lift_logo").append("svg:svg").attr("width", "80").attr("height", "49").attr("viewbox", "0 0 350 365").attr("id", "lifter").attr("xmlns", "http://www.w3.org/2000/svg").attr("version", "1.1");
	

	
	var barBell = svg.append("svg:g");
	barBell.append("path").attr("d", "M0 0 h70").attr("stroke-width", "1");
	barBell.append("rect").attr("width", "2px").attr("height", "15px").attr("transform", "translate(0,-7)");
	barBell.append("rect").attr("width", "2px").attr("height", "15px").attr("transform", "translate(68,-7)");
	
	barBell.attr("transform", "translate(4,14)");
	
	
	var dumbellsContainer = svg.append("svg:g");
	
	var dumbellOne = dumbellsContainer.append("svg:g");
	dumbellOne.append("svg:rect").attr("width", "20px").attr("height", "20px");
	dumbellOne.append("svg:line").attr("x1", "0").attr("y1", "0").attr("x2", "50").attr("y2", "50").style("fill: blue");
	dumbellOne.append("svg:rect").attr("width", "20px").attr("height", "20px").attr("transform", "translate(50,50)");
	
	var dumbellTwo = dumbellsContainer.append("svg:g");
	dumbellTwo.append("svg:rect").attr("width", "20px").attr("height", "20px").attr("transform", "translate(50,50)");
	dumbellTwo.append("svg:line").attr("x1", "0").attr("y1", "0").attr("x2", "50").attr("y2", "50").style("fill: blue");
	dumbellTwo.append("svg:rect").attr("width", "20px").attr("height", "20px").attr("transform", "translate(0, 0)");
	
	
	dumbellOne.attr("transform", "translate(20, 20) scale(0.333)");
	dumbellTwo.attr("transform", "translate(60, 20) rotate(90) scale(0.333)");
	
	$("svg").on('click', function() {
		window.location = "http://localhost:3000";
	});

</script>


