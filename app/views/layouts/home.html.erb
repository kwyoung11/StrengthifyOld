<!DOCTYPE html>
<html>
<head>
  <title>Thews</title>
<script src="http://d3js.org/d3.v3.min.js"></script>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
<script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-39228168-3', 'herokuapp.com');
  ga('send', 'pageview');

</script>
</head>
<body>
	<div id="header">
		<div id="header_content">
			<%= image_tag("HiRes.jpg", size: "40x40") %>
		<p><%= link_to 'Thews.io', root_url %></p>
			<div id="nav">
				<% if current_user %>
				<ul>
					<li><%= link_to 'Profile', user_path(current_user.id) %></li>
					<li><%= link_to 'Training', user_workouts_path(current_user.id) %></li>
					<li><%= link_to 'Add Workout', new_user_workout_path(current_user.id) %></li>
					<li><%= link_to 'Logout', logout_path("current"), method: :delete %></li>
					<li> <%= link_to 'Admin', admin_path if current_user.admin? %></li>
				<% else %>
				<ul>
					<li> <%= link_to 'Sign Up', signup_path %> </li>
					<li> <%= link_to 'Log In', login_path %> </li>
				</ul>
				<% end %>
			</div>
		</div>
	</div>
	
<div id="application_wrapper">	
	
	</div>
	<div id="content_wrapper">
		<%= yield %>
	</div>

<footer>
	<div id="footer">
		<div id="footer_logo"> Thews.io </div>
	<p>
		<ul id="footer_list">
			<li> <%= link_to 'About', root_url %> </li>
			<li> <%= link_to 'Contact', root_url %> </li>
			<li> <%= link_to 'Terms of Service', root_url %> </li>
			<li> <%= link_to 'Blog', root_url %> </li>
		</ul>
	</p>
	</div>
</footer>
</body>
</html>
