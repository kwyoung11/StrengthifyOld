<!DOCTYPE html>
<html>
<head>
  <title>Thews</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="application_wrapper">	
	<div id="header">
		<p><%= link_to 'Thews.io', root_url %></p>
			<div id="nav">
				<% if current_user %>
				<ul>
					<li><%= link_to 'Profile', user_path(current_user.id) %></li>
					<li><%= link_to 'Training', user_workouts_path(current_user.id) %></li>
					<li><%= link_to 'Add Workout', new_user_workout_path(current_user.id) %></li>
					<li><%= link_to 'Logout', logout_path("current"), method: :delete %></li>
				<% else %>
				<ul>
					<li> <%= link_to 'Sign Up', signup_path %> </li>
					<li> <%= link_to 'Log In', login_path %> </li>
				</ul>
				<% end %>
			</div>
	</div>
	
	<div id="content_wrapper">
		<%= yield %>
		<div class="push"></div>
	</div>
</div>
<footer>
	<div id="footer">
		<div id="footer_logo"> Thews.io </div>
	<p>
		<ul id="footer_list">
			<li> <%= link_to 'About', root_url %> </li>
			<li> <%= link_to 'Contact', root_url %> </li>
			<li> <%= link_to 'Terms of Service', root_url %> </li>
			<li> <%= link_to 'Blog', root_url %> </li>
		</ul>
	</p>
	</div>
</footer>
</body>
</html>
