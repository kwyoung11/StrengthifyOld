<div class="profile">
	<h2> <%= @user.name %> </h2>
	<div class="profile-info">
		
		<div class="profile-header">
			<div id="photo"> 
				<%= image_tag @user.photo_url(:default).to_s %> 
			</div>
				<i class="icon-arrow-down"></i>
				<i class="icon-user"></i>
				<i class="icon-arrow-up"></i>
				
			<ul id="friends_list">
				<% @user.friendships.each do |friendship| %>
						<%= show_friend_photo(friendship) %> 
				<% end %>
			</ul>
		
			<ul id="friend_finder">
				<%= show_friend_finder_nav %>
			</ul>
		
			<h2> Friend Requests </h2>
			<ul id="friend_requests">
				<% @user.friendships.each do |friendship| %>
					<%= show_friendship_status(friendship) %> 
				<% end %>
			</ul>
		</div>

		<div class="profile-data">
			<table>
				<tbody>
					<tr> 
						<th> bio </th> 
						<td> website</td>
						<td> <%= link_to "#{@user.website}", "http://#{@user.website}" %>
						</td>
					</tr>
					<tr>
						<th>  </th> 
						<td> age </td>
						<td> <%= @user.age(@user.birthday) %></td>
					</tr>
					<tr>
						<th> </th> 
						<td> location </td>
						<td> <%= @user.city + "," if @user.city %> <%= @user.state %></td>
					</tr>
					<tr>
						<th>  </th> 
						<td> gender </td>
						<td> <%= @user.gender %></td>
					</tr>
				</tbody>

				<tbody>
					<tr>
						<th> visits </th> 
						<td> member for </td>
						<td class="fade"> <%= time_ago_in_words(@user.created_at) %></td> 
					</tr>

					<tr>
						<th>  </th> 
						<td> visited </td>
						<td> <%= time_ago_in_words(@user.created_at) %></td> 
					</tr>

					<tr>
						<th> </th> 
						<td> seen </td>
						<td class="hilite"> <%= time_ago_in_words(@user.last_seen) + " ago" unless @user.last_seen.nil?  %></td> 
					</tr>

				
				</tbody>

				<tbody>
					<tr>
						<th> stats </th> 
						<td> profile views </td>
						<td> <%= @user.profile_views %></td> 
					</tr>
				</tbody>

			</table>
		</div>

		<div class="profile-about-me">
			<%= @user.about_me %>
		</div>


</div>

<section class="profile-workout-info">
	<div class="workouts_graph" data-user_id="<%= @user.id %>">
		<%= start_training(@user) %>
		<div id="graphContainer"></div>
	</div>
	<div class="profile-workouts">
		<header class="profile-workout-header"> 
			<h2><span><%= @user.workouts.count %></span> Workouts</h2>
		</header>
		<% @user_workouts.each do |workout| %>
		<%= render "media_objects/workout", workout: workout %>
		<% end %>
		<br />
		<%= will_paginate @user_workouts %>
	</div>

	<div class="profile-challenges"> 
			<header class="profile-workout-header"> 
			<h2><span><%= @user.challenges.count %></span> Challenges</h2>
		</header>
		<%= render '/challenges/index' %>
	</div>
</section>




</div>

