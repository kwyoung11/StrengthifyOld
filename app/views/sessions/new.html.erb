<div class="login">
	<h1> Log In </h1>
		<%= form_tag sessions_path do %>
  		<div class="field">
    		<%= text_field_tag :email, params[:email], :size => "25", :placeholder => " email" %>
  		</div>

  		<div class="field">
    		<%= password_field_tag :password, params[:password], :size => "25", :placeholder => " password" %>
  		</div>

  		<div class="actions">
				<%= submit_tag "Log in" %>
			</div>
	
			<div class="field">
	  		<%= check_box_tag :remember_me, 1, params[:remember_me] %>
	  		<%= label_tag :remember_me, 'Keep me logged in' %>
			</div>
			
		<% end %>
		<div class="registration"> 
			<p class="new-registrant"> New to Strengthify? </p>
			<p> <%= link_to 'Register', signup_path, class: "register-button" %> </p>
		</div>
		<p><%= link_to "Forgot password?", new_password_reset_path %></p>
		
</div>