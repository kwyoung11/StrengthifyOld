<div id="login">
	
	<h1>Log In</h1>
	<% if notice %>
		<p id="notice"><%= notice %></p> 
		<% end %>
		
		
		<%= form_tag sessions_path do %>
  		<div class="field">
    		<%= text_field_tag :email, params[:email], :size => "25", :placeholder => "Email" %>
  		</div>

  		<div class="field">
    		<%= password_field_tag :password, params[:password], :size => "25", :placeholder => "Password" %>
  		</div>

  		<div class="actions">
				<%= submit_tag "Login" %>
			</div>
	
			<div class="field">
	  		<%= check_box_tag :remember_me, 1, params[:remember_me] %>
	  		<%= label_tag :remember_me, 'Keep me logged in' %>
			</div>
			
			<p><%= link_to "Forgot your password?", new_password_reset_path %></p>
			
		<% end %>
		<p> or <%= link_to 'Register', signup_path %> for an account </p>
		
</div>