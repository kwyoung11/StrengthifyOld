<% if notice %>
	<p id="notice"><%= notice %></p> 
<% end %>
<div id="screencast">
	<p> <strong>This website was built for my final project while taking CS50X (on <%= link_to 'edx.org', "https://www.edx.org/courses/HarvardX/CS50x/2012/info", :target => :blank %>). See what it's about below:</strong> </p>
	<iframe width="640" height="380" src="http://www.youtube.com/embed/foFt9vVOZW8" frameborder="0" allowfullscreen></iframe>
</div>
<!-- Login area on front page -->
<div id="front_page">
	<div id="login_area">
		<%= render 'sessions/new' %>
		<h1 id="login_options"> OR  </h1>
		<%= link_to "/auth/fitbit" do %>
			<ul id="fitbit_signup">
				<li id="fitbit_text">Sign in with Fitbit </li>
				<li> <%= image_tag('fitbit-32-blk-onwhite.jpg') %> </li>
			</ul>
		<% end %>
	</div>
</div>
<div style="clear: both;"></div>

<% (1...3).each do |i| %>
<div class="<%= cycle('landing_odd', 'landing_even') %>">
	<% if i == 1 %> 
		<p class="info"> Thews is a social platform to track physical activity and measure progress towards your fitness goals. </p>
		<p class="display_graph"> <%= image_tag("GraphSS_final.jpg") %> </p>
		<p class="info"> Join the Thews community and have fun improving your fitness! </p> 
	<% end %>
	<% if i == 2 %> 
		<div id="first_value_statement"> Strength Training Doesn't Have To Be A Hassle. </div>
		<p id="second_value_statement"> Experience the best way to record workouts. <%= link_to 'Get Started', signup_path  %> </p>
	<% end %>

</div>
<% end %>

